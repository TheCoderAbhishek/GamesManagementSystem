@model GamesManagementSystem.Domain.Entities.Game

<div class="col-md-4 mb-4">
    <div class="card h-100">
        <img src="@(Model.BannerImagePath ?? "/images/default-banner.png")" class="card-img-top" alt="Banner for @Model.Name" style="height: 200px; object-fit: cover;">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text text-muted">By @Model.DevelopedBy</p>
            <p class="card-text flex-grow-1">@Model.Description</p>
            <p class="card-text"><small class="text-muted">Released: @Model.ReleaseDate.ToShortDateString()</small></p>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-controller="Games" asp-route-id="@Model.Id" class="btn btn-sm btn-info">Edit</a>
            <a asp-action="Details" asp-controller="Games" asp-route-id="@Model.Id" class="btn btn-sm btn-secondary">Details</a>
            <a asp-action="Delete" asp-controller="Games" asp-route-id="@Model.Id" class="btn btn-sm btn-danger">Delete</a>
        </div>
    </div>
</div>